/* 轮播图 */
.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 300rpx;
}

/* 导航区域 */
.nav-container {
  display: flex;
}

.nav-item {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.nav-item .iconfont {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  background-color: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  border-radius: 50%;
  margin: 20rpx 0;
}

.nav-item text:last-child {
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommon-container {
  padding: 20rpx;
}

.recommon-container .header .title {
  font-size: 28rpx;
  color: #333;
  margin: 10rpx 0;
}

.recommon-container .header .nav text:last-child {
  float: right;
  border: 1rpx solid #333;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.recommend-scroll {
  display: flex;
  padding: 10rpx 0;
}

.recommend-scroll .scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}

.recommend-scroll .scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.recommend-scroll .scroll-item text{
  font-size: 26rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}