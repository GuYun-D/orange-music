<view class="video-cotainer">
  <!-- 头部搜索start -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">搜索音乐</view>
    <image src="/static/images/logo.png"></image>
  </view>
  <!-- 头部搜索end -->

  <!-- 导航区域start -->
  <scroll-view class="nav-scroll" enable-flex scroll-x>
    <view class="nav-item" wx:for="{{navList}}" wx:key="id">
      <view class="nav-content {{navId == item.id ? 'active' : ''}}" bindtap="chnageNav" id="{{item.id}}">{{item.name}}</view>
    </view>
  </scroll-view>
  <!-- 导航区域end -->

  <!-- 视频列表区域start -->
  <scroll-view class="video-scrll">
    <view class="video-item" wx:for="{{videoLiSt}}" wx:key="id">
      <video wx:if="{{ videoId === item.data.vid}}" bindplay="handleMusicPlay" poster="{{item.data.coverUrl}}" id="{{item.data.vid}}" object-fit="cover" src="{{item.data.urlInfo.url}}"></video>

      <image wx:else id="{{item.data.vid}}" bindtap="handleMusicPlay" class="cover-img" src="{{item.data.coverUrl}}"></image>

      <view class="content">{{item.data.title}}</view>

      <view class="footer">
        <image class="avatar" src="{{item.data.creator.avatarUrl}}"></image>
        <text class="nickName">{{item.data.creator.nickname}}</text>
        <view class="comments_praised">
          <text class="item">
            <text class="iconfont icon-buoumaotubiao15"></text>
            <text class="count">{{item.data.praisedCount}}</text>
          </text>
          <text class="item">
            <text class="iconfont icon-pinglun1"></text>
            <text class="count">{{item.data.commentCount}}</text>
          </text>
          <button open-type="share" class="item btn">
            <text class="iconfont icon-gengduo"></text>
          </button>
        </view>
      </view>
    </view>
  </scroll-view>
  <!-- 视频列表区域end -->

</view>