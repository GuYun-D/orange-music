page {
  width: 100%;
  height: 100%;
}

.music-detail-container {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  background-color: rgba(0, 0, 0, 0.5);
  align-items: center;
}

.circle {
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 50%;
  z-index: 10;
}

.needle {
  position: relative;
  top: -40rpx;
  left: 60rpx;
  width: 192rpx;
  height: 274rpx;
  transform: rotate(-20deg);
  transform-origin: 40px 0;
  transition: transform 350ms linear;
  z-index: 2;
}

.needle-rotate {
  transform: rotate(0);
}

.disc-container {
  position: relative;
  top: -170rpx;
  width: 598rpx;
  height: 598rpx;
}

.disc-container .disc {
  width: 100%;
  height: 100%;
  z-index: 1;
}

.disc-rotate {
  animation: disc 5s linear infinite;
  animation-delay: 350ms;
}

@keyframes disc {
  from{
    transform: rotate(0deg);
  }

  to{
    transform: rotate(360deg);
  }
}

.music-img {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 370rpx;
  height: 370rpx;
  border-radius: 50%;
}

.music-control{
  box-sizing: border-box;
  width: 100%;
  padding: 0 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #fff;
  padding-top: 30rpx;
}

.music-control .iconfont{
  font-size: 50rpx;
  color: #fff;
}